// https://zed.dev/docs/configuring-zed
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": true,
  "buffer_font_size": 13,
  "buffer_font_family": "Berkeley Mono",
  "buffer_line_height": { "custom": 1.3 },
  "cursor_blink": false,
  "double_click_in_multibuffer": "open",
  "use_autoclose": false,

  "git": {
    "inline_blame": {
      "enabled": false,
      "show_commit_summary": true
    }
  },

  "languages": {
    "HTML": { "tab_size": 2 }
  },

  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "font_size": 13,
    "dock": "left",
    "line_height": { "custom": 1.3 }
  },

  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2",
    "dock": "right",
    "enable_experimental_live_diffs": true
  },

  // "theme": "Ayu Dark",
  "theme": "Base16 Ayu Dark",
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "color": "#8c8b88ff", // darker, same as comment.doc
        "font_style": "normal" // I hate italics
      }
    }
  }
}
