theme = ayu
# lighten error red a bit (prob too similar to 9, though)
palette = 1=#ff5555
# lighten dark gray for faded bits in jj
palette = 8=#5B5B5B
# darker black to match helix
background = 020202
split-divider-color = #666

font-family = TX-02
adjust-cell-height = 3
adjust-cursor-thickness = 1
adjust-box-thickness = -1

macos-titlebar-style = tabs
unfocused-split-opacity = 0.9
window-save-state = always
window-padding-x = 4
window-padding-y = 2

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right
# I think auto covers me pretty much all the time
keybind = cmd+d=new_split:auto

keybind = cmd+backspace=esc:w

# no-title leaves dir in place as tab/window title. shell integration overall is
# worth leaving on for prompt marking and other features not covered by flags
shell-integration-features = cursor,no-sudo,no-title

auto-update-channel = tip
